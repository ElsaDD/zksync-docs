{
  "name": "zksync-docs",
  "description": "zkSync Online Documentation",
  "version": "2.2.0",
  "license": "MIT",
  "author": "Matter Labs",
  "homepage": "https://docs.zksync.io/",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "scripts": {
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "docs:deploy": "yarn docs:build && firebase deploy",
    "fmt": "prettier --write \"docs/**/*.md\"",
    "fmt:check": "prettier --check \"docs/**/*.md\"",
    "cspell": "cspell docs/**/*.md",
    "md:lint": "markdownlint docs",
    "md:deadlinks": "check-md",
    "ci": "yarn run fmt:check; yarn run cspell; yarn run md:lint; yarn run md:deadlinks"
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 120,
    "parser": "markdown",
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "proseWrap": "always"
  },
  "check-md": {
    "cwd": "./docs",
    "defaultIndex": [
      "README.md"
    ],
    "exitLevel": "warn",
    "ignoreFootnotes": true
  },
  "bugs": {
    "url": "https://github.com/matter-labs/zksync-docs/issues"
  },
  "dependencies": {
    "markdown-it-footnote": "3.0.3",
    "vuepress": "^1.8.2",
    "vuepress-plugin-canonical": "^1.0.0",
    "vuepress-plugin-fulltext-search": "^2.2.1",
    "vuepress-plugin-sitemap": "^2.3.1"
  },
  "devDependencies": {
    "check-md": "^1.0.2",
    "cspell": "^5.12.3",
    "markdownlint": "^0.24.0",
    "markdownlint-cli": "^0.29.0",
    "prettier": "2.4.1",
    "stylelint": "^13.10.0"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-recommended",
      "stylelint-config-rational-order"
    ],
    "plugins": [
      "stylelint-order",
      "stylelint-scss",
      "stylelint-config-rational-order/plugin",
      "stylelint-high-performance-animation",
      "stylelint-declaration-use-variable"
    ],
    "rules": {
      "no-empty-source": [
        true,
        {
          "severity": "warning"
        }
      ],
      "plugin/no-low-performance-animation-properties": [
        true,
        {
          "severity": "warning"
        }
      ],
      "sh-waqar/declaration-use-variable": [
        [
          "/color/",
          "font-size",
          "font-family",
          "font-weight"
        ]
      ],
      "order/properties-order": [],
      "plugin/rational-order": [
        true,
        {
          "border-in-box-model": false,
          "empty-line-between-groups": false
        }
      ],
      "selector-type-no-unknown": [
        true,
        {
          "ignore": [
            "custom-elements"
          ]
        }
      ],
      "no-descending-specificity": true,
      "at-rule-no-unknown": null,
      "scss/at-rule-no-unknown": true
    }
  }
}
